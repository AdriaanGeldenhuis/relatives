<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Foreground service permission (Android 9+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <!-- Boot receiver to restart tracking -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Network -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Wake lock (limited use in LIVE mode only) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- POST_NOTIFICATIONS for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Relatives"
        android:usesCleartextTraffic="false"
        tools:targetApi="31">

        <!-- Main Activity with WebView -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Location Tracking Foreground Service -->
        <service
            android:name=".tracking.TrackingLocationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location"
            android:stopWithTask="false">

            <!-- Intent filters for service actions -->
            <intent-filter>
                <action android:name="com.relatives.app.START_TRACKING" />
                <action android:name="com.relatives.app.STOP_TRACKING" />
                <action android:name="com.relatives.app.VIEWER_VISIBLE" />
                <action android:name="com.relatives.app.VIEWER_HIDDEN" />
                <action android:name="com.relatives.app.UPDATE_SETTINGS" />
                <action android:name="com.relatives.app.WAKE_TRACKING" />
            </intent-filter>
        </service>

        <!-- Boot Receiver - restarts tracking after reboot if enabled -->
        <receiver
            android:name=".receiver.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
